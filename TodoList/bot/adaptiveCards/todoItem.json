{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "Container",
            "style": "emphasis",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "size": "Large",
                                    "color": "Accent",
                                    "style": "heading",
                                    "spacing": "ExtraLarge",
                                    "height": "stretch",
                                    "text": "**TO-DO ITEM**",
                                    "wrap": true,
                                    "weight": "Bolder"
                                }
                            ],
                            "width": "stretch"
                        }
                    ]
                }
            ],
            "bleed": true
        },
        {
            "type": "Container",
            "spacing": "Large",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "${task.creator.profileImage}",
                                    "width": "60px",
                                    "style": "Person"
                                }
                            ],
                            "width": "auto"
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "FactSet",
                                    "facts": [
                                        {
                                            "title": "User Name",
                                            "value": "${task.creator.userName}"
                                        },
                                        {
                                            "title": "Date",
                                            "value": "${formatDateTime(task.taskTime, 'ddddd, MMMM d, YYYY')}"
                                        },
                                        {
                                            "title": "Task Status",
                                            "value": "${task.taskStatus}"
                                        }
                                    ]
                                }
                            ],
                            "width": "stretch",
                            "verticalContentAlignment": "Bottom",
                            "spacing": "ExtraLarge"
                        }
                    ]
                },
                {
                    "type": "Container",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Task Content",
                            "wrap": true,
                            "fontType": "Default",
                            "weight": "Bolder",
                            "height": "stretch"
                        },
                        {
                            "type": "TextBlock",
                            "title": "Content",
                            "text": "${task.taskContent}",
                            "wrap": true,
                            "spacing": "Small",
                            "maxLines": 10
                        }
                    ],
                    "spacing": "ExtraLarge"
                },
                {
                    "type": "Container",
                    "items": [
                        {
                            "type": "ColumnSet",
                            "columns": [
                                {
                                    "type": "Column",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "Viewers",
                                            "wrap": true,
                                            "fontType": "Default",
                                            "weight": "Bolder",
                                            "height": "stretch"
                                        }
                                    ]
                                },
                                {
                                    "type": "Column",
                                    "spacing": "None",
                                    "selectAction": {
                                        "type": "Action.ToggleVisibility",
                                        "title": "expand",
                                        "targetElements": [
                                            "cardContent",
                                            "chevronDown",
                                            "chevronUp"
                                        ]
                                    },
                                    "verticalContentAlignment": "Center",
                                    "items": [
                                        {
                                            "type": "Image",
                                            "id": "chevronDown",
                                            "url": "https://adaptivecards.io/content/down.png",
                                            "width": "20px",
                                            "altText": "Details collapsed"
                                        },
                                        {
                                            "type": "Image",
                                            "id": "chevronUp",
                                            "url": "https://adaptivecards.io/content/up.png",
                                            "width": "20px",
                                            "altText": "Details expanded",
                                            "isVisible": false
                                        }
                                    ],
                                    "width": "auto"
                                }
                            ]
                        },
                        {
                            "type": "Container",
                            "id": "cardContent",
                            "isVisible": false,
                            "items": [
                                {
                                    "$data": "${task.viewers}",
                                    "type": "Container",
                                    "items": [
                                        {
                                            "type": "ColumnSet",
                                            "columns": [
                                                {
                                                    "type": "Column",
                                                    "items": [
                                                        {
                                                            "type": "Image",
                                                            "url": "${profileImage}",
                                                            "width": "30px",
                                                            "style": "Person",
                                                            "horizontalAlignment": "Center"
                                                        }
                                                    ],
                                                    "width": 2,
                                                    "verticalContentAlignment": "Center"
                                                },
                                                {
                                                    "type": "Column",
                                                    "items": [
                                                        {
                                                            "type": "TextBlock",
                                                            "text": "${userName}",
                                                            "wrap": true
                                                        }
                                                    ],
                                                    "width": 8,
                                                    "verticalContentAlignment": "Center"
                                                }
                                            ]
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "style": "emphasis",
            "bleed": true,
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Share with :",
                    "wrap": true,
                    "fontType": "Default",
                    "weight": "Bolder",
                    "height": "stretch"
                },
                {
                    "type": "Input.ChoiceSet",
                    "choices": [],
                    "choices.data": {
                        "type": "Data.Query",
                        "dataset": "graph.microsoft.com/users"
                    },
                    "id": "sharedUsers",
                    "isMultiSelect": true,
                    "value": "${task.peoplePickerValue}"
                },
                {
                    "type": "ActionSet",
                    "actions": [
                        {
                            "type": "Action.Submit",
                            "title": "Send",
                            "data": {
                                "action": "share",
                                "taskId": "${task.taskId}"
                            }
                        }
                    ]
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.4",
    "fallbackText": "This card requires Adaptive Cards v1.2 support to be rendered properly."
}