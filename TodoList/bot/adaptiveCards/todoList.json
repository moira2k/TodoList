{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "TextBlock",
            "size": "ExtraLarge",
            "text": "**TO-DO LIST**",
            "wrap": true,
            "style": "heading"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": 15,
                    "items": [
                        {
                            "type": "TextBlock",
                            "weight": "Bolder",
                            "text": "**DATE**",
                            "fontType": "Monospace",
                            "size": "Large",
                            "isSubtle": true
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": 17,
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "**STATUS**",
                            "weight": "Bolder",
                            "fontType": "Monospace",
                            "size": "Large",
                            "isSubtle": true
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": 66,
                    "items": [
                        {
                            "type": "TextBlock",
                            "weight": "Bolder",
                            "text": "**CONTENT**",
                            "fontType": "Monospace",
                            "size": "Large",
                            "isSubtle": true
                        }
                    ]
                }
            ],
            "spacing": "ExtraLarge",
            "style": "emphasis",
            "bleed": true
        },
        {
            "type": "ColumnSet",
            "$data": "${tasks}",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${formatDateTime(dueDate, 'YYYY-MM-dd')}",
                            "wrap": true
                        }
                    ],
                    "selectAction": {
                        "type": "Action.Submit",
                        "tooltip": "See details",
                        "data": {
                            "action": "show",
                            "taskId": "${taskId}",
                            "pageNow": "${$root.pageNow}"
                        }
                    },
                    "width": 15,
                    "verticalContentAlignment": "Center"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${CurrentStatus}",
                            "wrap": true
                        }
                    ],
                    "selectAction": {
                        "type": "Action.Submit",
                        "tooltip": "See details",
                        "data": {
                            "action": "show",
                            "taskId": "${taskId}",
                            "pageNow": "${$root.pageNow}"
                        }
                    },
                    "width": 17,
                    "verticalContentAlignment": "Center"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${taskContent}",
                            "wrap": true,
                            "color": "Accent",
                            "maxLines": 10,
                            "weight": "Bolder"
                        }
                    ],
                    "selectAction": {
                        "type": "Action.Submit",
                        "tooltip": "See details",
                        "data": {
                            "action": "show",
                            "taskId": "${taskId}",
                            "pageNow": "${$root.pageNow}"
                        }
                    },
                    "width": 63,
                    "verticalContentAlignment": "Center"
                },
                {
                    "type": "Column",
                    "verticalContentAlignment": "Center",
                    "items": [
                        {
                            "type": "Image",
                            "url": "https://todolist.blob.core.windows.net/adaptive-cards/bin.png?sp=r&st=2022-08-18T10:29:48Z&se=2022-11-30T18:29:48Z&spr=https&sv=2021-06-08&sr=c&sig=%2BYqszohKyR55ozKNZuKWYcn8Movulz%2Fx6L4mMvWffKs%3D",
                            "width": "20px"
                        }
                    ],
                    "selectAction": {
                        "type": "Action.Submit",
                        "tooltip": "Delete",
                        "data": {
                            "action": "delete",
                            "taskId": "${taskId}",
                            "pageNow": "${$root.pageNow}"
                        }
                    },
                    "width": 3,
                    "spacing": "None"
                }
            ]
        },
        {
            "type": "TextBlock",
            "text": "Total Number: ${taskNum}",
            "wrap": true,
            "fontType": "Monospace",
            "weight": "Bolder",
            "isSubtle": true,
            "separator": true,
            "spacing": "ExtraLarge",
            "horizontalAlignment": "Right"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": 3,
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Page **${pageNow}** of ${pageNum}",
                            "wrap": true,
                            "horizontalAlignment": "Center"
                        }
                    ],
                    "verticalContentAlignment": "Center"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Input.Text",
                            "value": "${pageNow}",
                            "id": "jumpedpage",
                            "isRequired": true,
                            "regex": "^[1-9][0-9]*$",
                            "errorMessage": "This requires a valid number !",
                            "inlineAction": {
                                "type": "Action.Submit",
                                "title": "Go",
                                "data": {
                                    "action": "go"
                                }
                            }
                        }
                    ],
                    "width": 2,
                    "verticalContentAlignment": "Center"
                }
            ]
        }
    ],
    "actions": [
        {
            "type": "Action.ShowCard",
            "title": "New Item",
            "tooltip": "Create a to-do item",
            "card": {
                "type": "AdaptiveCard",
                "actions": [
                    {
                        "type": "Action.Submit",
                        "title": "Confirm",
                        "data": {
                            "action": "add",
                            "pageNow": "${pageNow}"
                        }
                    }
                ],
                "body": [
                    {
                        "type": "Input.Date",
                        "id": "addDate",
                        "label": "Date",
                        "value": "${formatDateTime(time, 'YYYY-MM-dd')}",
                        "isRequired": true
                    },
                    {
                        "type": "Input.Text",
                        "placeholder": "What will you do?",
                        "id": "addContent",
                        "label": "Content",
                        "maxLength": 256,
                        "isMultiline": true,
                        "isRequired": true
                    }
                ]
            },
            "style": "positive"
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.4"
}