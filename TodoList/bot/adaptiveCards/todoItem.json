{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "Container",
            "bleed": true,
            "style": "emphasis",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "size": "ExtraLarge",
                                    "text": "**TO-DO ITEM**",
                                    "wrap": true,
                                    "style": "heading",
                                    "color": "Accent",
                                    "weight": "Bolder"
                                }
                            ],
                            "width": "stretch"
                        },
                        {
                            "type": "Column",
                            "verticalContentAlignment": "Center",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "https://todolist.blob.core.windows.net/adaptive-cards/return.png?sp=r&st=2022-08-18T10:29:48Z&se=2022-11-30T18:29:48Z&spr=https&sv=2021-06-08&sr=c&sig=%2BYqszohKyR55ozKNZuKWYcn8Movulz%2Fx6L4mMvWffKs%3D",
                                    "width": "25px"
                                }
                            ],
                            "selectAction": {
                                "type": "Action.Submit",
                                "tooltip": "click to return",
                                "data": {
                                    "action": "return"
                                }
                            },
                            "width": "auto"
                        },
                        {
                            "type": "Column",
                            "verticalContentAlignment": "Center",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "*return your to-do list*",
                                    "isSubtle": true,
                                    "wrap": true,
                                    "horizontalAlignment": "Right"
                                }
                            ],
                            "selectAction": {
                                "type": "Action.Submit",
                                "tooltip": "click to return",
                                "data": {
                                    "action": "return"
                                }
                            },
                            "width": "130px",
                            "spacing": "None"
                        }
                    ]
                }
            ],
            "spacing": "ExtraLarge"
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "${task.creator.profileImage}",
                                    "width": "80px",
                                    "style": "Person"
                                }
                            ],
                            "width": "100px",
                            "verticalContentAlignment": "Center"
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "User Name",
                                    "wrap": true,
                                    "weight": "Bolder",
                                    "height": "stretch"
                                },
                                {
                                    "type": "TextBlock",
                                    "text": "Due Date",
                                    "wrap": true,
                                    "weight": "Bolder",
                                    "height": "stretch",
                                    "spacing": "Small"
                                },
                                {
                                    "type": "TextBlock",
                                    "text": "Task Status",
                                    "wrap": true,
                                    "weight": "Bolder",
                                    "height": "stretch",
                                    "spacing": "Small"
                                }
                            ],
                            "width": "auto",
                            "verticalContentAlignment": "Top",
                            "spacing": "ExtraLarge",
                            "height": "stretch"
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "id": "userName",
                                    "text": "${task.creator.userName}",
                                    "wrap": true,
                                    "height": "stretch",
                                    "spacing": "Medium"
                                },
                                {
                                    "type": "Input.Date",
                                    "id": "dueDate",
                                    "value": "${formatDateTime(task.dueDate, 'YYYY-MM-dd')}"
                                },
                                {
                                    "type": "Input.ChoiceSet",
                                    "id": "currentStatus",
                                    "choices": [
                                        {
                                            "title": "Unstarted",
                                            "value": "Unstarted"
                                        },
                                        {
                                            "title": "Processing",
                                            "value": "Processing"
                                        },
                                        {
                                            "title": "Finished",
                                            "value": "Finished"
                                        }
                                    ],
                                    "value": "${task.currentStatus}"
                                }
                            ],
                            "width": "stretch",
                            "verticalContentAlignment": "Bottom",
                            "spacing": "ExtraLarge"
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Task Content",
                    "wrap": true,
                    "fontType": "Default",
                    "weight": "Bolder",
                    "height": "stretch"
                },
                {
                    "type": "Input.Text",
                    "id": "taskContent",
                    "value": "${task.taskContent}",
                    "isMultiline": true
                },
                {
                    "type": "ActionSet",
                    "actions": [
                        {
                            "type": "Action.Submit",
                            "title": "Update",
                            "tooltip": "click to update the to-do item",
                            "data": {
                                "action": "edit",
                                "taskId": "${task.taskId}"
                            }
                        }
                    ],
                    "height": "stretch"
                }
            ],
            "spacing": "ExtraLarge"
        },
        {
            "type": "Container",
            "style": "emphasis",
            "bleed": true,
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Share With",
                    "wrap": true,
                    "fontType": "Default",
                    "weight": "Bolder",
                    "height": "stretch"
                },
                {
                    "type": "Input.ChoiceSet",
                    "choices.data": {
                        "type": "Data.Query",
                        "dataset": "graph.microsoft.com/users"
                    },
                    "id": "sharedUsers",
                    "isMultiSelect": true,
                    "value": "${task.peoplePickerValue}"
                },
                {
                    "type": "ActionSet",
                    "actions": [
                        {
                            "type": "Action.Submit",
                            "title": "Share",
                            "tooltip": "click to share the to-do item with other peopler",
                            "data": {
                                "action": "share",
                                "taskId": "${task.taskId}"
                            }
                        }
                    ],
                    "height": "stretch"
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.4"
}