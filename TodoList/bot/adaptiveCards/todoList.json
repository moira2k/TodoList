{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "size": "ExtraLarge",
                                    "text": "**TO-DO LIST**",
                                    "wrap": true,
                                    "style": "heading"
                                }
                            ],
                            "width": "stretch"
                        }
                    ]
                }
            ],
            "spacing": "ExtraLarge"
        },
        {
            "type": "Container",
            "spacing": "Large",
            "style": "emphasis",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "weight": "Bolder",
                                    "text": "**DATE**",
                                    "horizontalAlignment": "Left",
                                    "fontType": "Monospace",
                                    "size": "Large",
                                    "isSubtle": true
                                }
                            ],
                            "width": 8
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "**STATUS**",
                                    "horizontalAlignment": "Left",
                                    "weight": "Bolder",
                                    "fontType": "Monospace",
                                    "size": "Large",
                                    "isSubtle": true
                                }
                            ],
                            "spacing": "Small",
                            "width": 15
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "weight": "Bolder",
                                    "text": "**CONTENT**",
                                    "horizontalAlignment": "Left",
                                    "fontType": "Monospace",
                                    "size": "Large",
                                    "isSubtle": true
                                }
                            ],
                            "width": 70,
                            "spacing": "Small"
                        }
                    ]
                }
            ],
            "bleed": true
        },
        {
            "$data": "${tasks}",
            "type": "Container",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "${formatDateTime(dueDate, 'MM-dd')}",
                                    "wrap": true
                                }
                            ],
                            "width": 7,
                            "verticalContentAlignment": "Center"
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "${CurrentStatus}",
                                    "wrap": true
                                }
                            ],
                            "width": 13,
                            "verticalContentAlignment": "Center"
                        },
                        {
                            "type": "Column",
                            "spacing": "Large",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "${taskContent}",
                                    "wrap": true,
                                    "horizontalAlignment": "Left",
                                    "color": "Accent",
                                    "maxLines": 10,
                                    "weight": "Bolder"
                                }
                            ],
                            "width": 60,
                            "verticalContentAlignment": "Center"
                        },
                        {
                            "type": "Column",
                            "spacing": "None",
                            "verticalContentAlignment": "Center",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "https://todolist.blob.core.windows.net/adaptive-cards/ellipsis.png?sp=r&st=2022-08-18T10:29:48Z&se=2022-11-30T18:29:48Z&spr=https&sv=2021-06-08&sr=c&sig=%2BYqszohKyR55ozKNZuKWYcn8Movulz%2Fx6L4mMvWffKs%3D",
                                    "width": "15px",
                                    "horizontalAlignment": "Center"
                                }
                            ],
                            "selectAction": {
                                "type": "Action.Submit",
                                "data": {
                                    "action": "show",
                                    "id": "${$index}",
                                    "taskId": "${taskId}"
                                }
                            },
                            "width": 3
                        },
                        {
                            "type": "Column",
                            "spacing": "None",
                            "selectAction": {
                                "type": "Action.ToggleVisibility",
                                "title": "expand",
                                "targetElements": [
                                    "cardContent${$index}",
                                    "chevronDown${$index}",
                                    "chevronUp${$index}"
                                ]
                            },
                            "verticalContentAlignment": "Center",
                            "items": [
                                {
                                    "type": "Image",
                                    "id": "chevronDown${$index}",
                                    "url": "https://adaptivecards.io/content/down.png",
                                    "width": "20px",
                                    "altText": "Details collapsed"
                                },
                                {
                                    "type": "Image",
                                    "id": "chevronUp${$index}",
                                    "url": "https://adaptivecards.io/content/up.png",
                                    "width": "20px",
                                    "altText": "Details expanded",
                                    "isVisible": false
                                }
                            ],
                            "width": "auto"
                        },
                        {
                            "type": "Column",
                            "spacing": "None",
                            "verticalContentAlignment": "Center",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "https://todolist.blob.core.windows.net/adaptive-cards/bin.png?sp=r&st=2022-08-18T10:29:48Z&se=2022-11-30T18:29:48Z&spr=https&sv=2021-06-08&sr=c&sig=%2BYqszohKyR55ozKNZuKWYcn8Movulz%2Fx6L4mMvWffKs%3D",
                                    "width": "20px",
                                    "horizontalAlignment": "Center"
                                }
                            ],
                            "selectAction": {
                                "type": "Action.Submit",
                                "data": {
                                    "action": "del",
                                    "id": "${$index}",
                                    "taskId": "${taskId}"
                                }
                            },
                            "width": 3
                        }
                    ]
                },
                {
                    "type": "Container",
                    "id": "cardContent${$index}",
                    "isVisible": false,
                    "items": [
                        {
                            "type": "Container",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "*Modify the above to-do item:*",
                                    "isSubtle": true,
                                    "wrap": true,
                                    "horizontalAlignment": "Left",
                                    "weight": "Lighter"
                                },
                                {
                                    "type": "Container",
                                    "items": [
                                        {
                                            "type": "ColumnSet",
                                            "columns": [
                                                {
                                                    "type": "Column",
                                                    "items": [
                                                        {
                                                            "type": "Input.Date",
                                                            "id": "updateTime${$index}",
                                                            "value": "${formatDateTime(dueDate, 'YYYY-MM-dd')}"
                                                        }
                                                    ],
                                                    "width": 50
                                                },
                                                {
                                                    "type": "Column",
                                                    "items": [
                                                        {
                                                            "type": "Input.ChoiceSet",
                                                            "id": "updateStatus${$index}",
                                                            "choices": [
                                                                {
                                                                    "title": "Not Started",
                                                                    "value": "Not Started"
                                                                },
                                                                {
                                                                    "title": "Processing",
                                                                    "value": "Processing"
                                                                },
                                                                {
                                                                    "title": "Finished",
                                                                    "value": "Finished"
                                                                }
                                                            ],
                                                            "value": "${CurrentStatus}"
                                                        }
                                                    ],
                                                    "width": 50
                                                }
                                            ]
                                        },
                                        {
                                            "type": "Input.Text",
                                            "id": "updateContent${$index}",
                                            "isMultiline": true,
                                            "value": "${taskContent}"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "type": "Container",
                            "items": [
                                {
                                    "type": "ColumnSet",
                                    "columns": [
                                        {
                                            "type": "Column",
                                            "items": [
                                                {
                                                    "type": "ActionSet",
                                                    "actions": [
                                                        {
                                                            "type": "Action.Submit",
                                                            "title": "Confirm",
                                                            "data": {
                                                                "action": "edit",
                                                                "id": "${$index}",
                                                                "taskId": "${taskId}"
                                                            }
                                                        }
                                                    ]
                                                }
                                            ],
                                            "width": "auto"
                                        }
                                    ],
                                    "minHeight": "0px"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "spacing": "Large",
            "items": [
                {
                    "type": "ActionSet",
                    "actions": [
                        {
                            "type": "Action.Submit",
                            "title": "New Item",
                            "data": {
                                "msteams": {
                                    "type": "task/fetch"
                                },
                                "action": "add"
                            }
                        }
                    ]
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.4"
}