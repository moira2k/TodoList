{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "Container",
            "bleed": true,
            "style": "emphasis",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "size": "ExtraLarge",
                                    "text": "**TO-DO ITEM**",
                                    "wrap": true,
                                    "style": "heading",
                                    "color": "Default",
                                    "weight": "Bolder"
                                }
                            ],
                            "width": "stretch"
                        }
                    ]
                }
            ],
            "spacing": "ExtraLarge"
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "${task.creator.profileImage}",
                                    "width": "60px",
                                    "style": "Person"
                                }
                            ],
                            "width": "auto",
                            "verticalContentAlignment": "Center"
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "User Name",
                                    "wrap": true,
                                    "weight": "Bolder",
                                    "height": "stretch"
                                },
                                {
                                    "type": "TextBlock",
                                    "text": "Date",
                                    "wrap": true,
                                    "weight": "Bolder",
                                    "height": "stretch",
                                    "spacing": "Small"
                                },
                                {
                                    "type": "TextBlock",
                                    "text": "Task Status",
                                    "wrap": true,
                                    "weight": "Bolder",
                                    "height": "stretch",
                                    "spacing": "Small"
                                }
                            ],
                            "width": "auto",
                            "verticalContentAlignment": "Top",
                            "spacing": "ExtraLarge",
                            "height": "stretch"
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "id": "userName",
                                    "text": "${task.creator.userName}",
                                    "wrap": true,
                                    "height": "stretch",
                                    "spacing": "Medium"
                                },
                                {
                                    "type": "Input.Date",
                                    "id": "dueDate",
                                    "value": "${formatDateTime(task.dueDate, 'YYYY-MM-dd')}"
                                },
                                {
                                    "type": "Input.ChoiceSet",
                                    "id": "currentStatus",
                                    "choices": [
                                        {
                                            "title": "Not Started",
                                            "value": "Not Started"
                                        },
                                        {
                                            "title": "Processing",
                                            "value": "Processing"
                                        },
                                        {
                                            "title": "Finished",
                                            "value": "Finished"
                                        }
                                    ],
                                    "value": "${task.currentStatus}"
                                }
                            ],
                            "width": "stretch",
                            "verticalContentAlignment": "Bottom",
                            "spacing": "ExtraLarge"
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "ActionSet",
                                    "actions": [
                                        {
                                            "type": "Action.Submit",
                                            "title": "Edit"
                                        }
                                    ],
                                    "horizontalAlignment": "Center"
                                }
                            ],
                            "width": "stretch",
                            "verticalContentAlignment": "Center",
                            "height": "stretch"
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Task Content",
                    "wrap": true,
                    "fontType": "Default",
                    "weight": "Bolder",
                    "height": "stretch"
                },
                {
                    "type": "Input.Text",
                    "id": "taskContent",
                    "value": "${task.taskContent}",
                    "isMultiline": true
                }
            ],
            "spacing": "ExtraLarge"
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "Viewers",
                                    "wrap": true,
                                    "fontType": "Default",
                                    "weight": "Bolder",
                                    "height": "stretch"
                                }
                            ],
                            "width": "stretch"
                        },
                        {
                            "type": "Column",
                            "spacing": "None",
                            "selectAction": {
                                "type": "Action.ToggleVisibility",
                                "title": "expand",
                                "targetElements": [
                                    "cardContent",
                                    "chevronDown",
                                    "chevronUp"
                                ]
                            },
                            "verticalContentAlignment": "Center",
                            "items": [
                                {
                                    "type": "Image",
                                    "id": "chevronDown",
                                    "url": "https://adaptivecards.io/content/down.png",
                                    "width": "20px",
                                    "altText": "Details collapsed"
                                },
                                {
                                    "type": "Image",
                                    "id": "chevronUp",
                                    "url": "https://adaptivecards.io/content/up.png",
                                    "width": "20px",
                                    "altText": "Details expanded",
                                    "isVisible": false
                                }
                            ],
                            "width": "auto"
                        }
                    ]
                },
                {
                    "type": "Container",
                    "id": "cardContent",
                    "isVisible": false,
                    "items": [
                        {
                            "$data": "${task.viewers}",
                            "type": "Container",
                            "items": [
                                {
                                    "type": "ColumnSet",
                                    "columns": [
                                        {
                                            "type": "Column",
                                            "items": [
                                                {
                                                    "type": "Image",
                                                    "url": "${profileImage}",
                                                    "width": "30px",
                                                    "style": "Person",
                                                    "horizontalAlignment": "Center"
                                                }
                                            ],
                                            "width": 2,
                                            "verticalContentAlignment": "Center"
                                        },
                                        {
                                            "type": "Column",
                                            "items": [
                                                {
                                                    "type": "TextBlock",
                                                    "text": "${userName}",
                                                    "wrap": true
                                                }
                                            ],
                                            "width": 8,
                                            "verticalContentAlignment": "Center"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "style": "emphasis",
            "bleed": true,
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Share with :",
                    "wrap": true,
                    "fontType": "Default",
                    "weight": "Bolder",
                    "height": "stretch"
                },
                {
                    "type": "Input.ChoiceSet",
                    "choices.data": {
                        "type": "Data.Query",
                        "dataset": "graph.microsoft.com/users"
                    },
                    "id": "sharedUsers",
                    "isMultiSelect": true,
                    "value": "${task.peoplePickerValue}"
                },
                {
                    "type": "ActionSet",
                    "actions": [
                        {
                            "type": "Action.Submit",
                            "title": "Send",
                            "data": {
                                "action": "share",
                                "taskId": "${task.taskId}"
                            }
                        }
                    ]
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.4"
}