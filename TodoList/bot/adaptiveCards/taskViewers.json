{
    "type": "AdaptiveCard",
    "version": "1.4",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "body": [
        {
            "type": "TextBlock",
            "text": "This task has been shared with as follow:",
            "wrap": true,
            "size": "Large",
            "weight": "Bolder"
        },
        {
            "type": "ColumnSet",
            "$data": "${task.viewers}",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${userName}",
                            "wrap": true
                        }
                    ],
                    "width": 1,
                    "verticalContentAlignment": "Center"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "email:",
                            "wrap": true,
                            "weight": "Bolder"
                        }
                    ],
                    "width": "50px",
                    "verticalContentAlignment": "Center"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${mail}",
                            "wrap": true
                        }
                    ],
                    "width": 2,
                    "verticalContentAlignment": "Center",
                    "spacing": "None"
                }
            ]
        }
    ]
}