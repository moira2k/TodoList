{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "TextBlock",
            "size": "ExtraLarge",
            "text": "**TO-DO LIST**",
            "wrap": true,
            "style": "heading"
        },
        {
            "type": "TextBlock",
            "text": "***Shared with me***",
            "wrap": true,
            "color": "Attention",
            "size": "Large",
            "horizontalAlignment": "Left",
            "spacing": "None"
        },
        {
            "type": "ColumnSet",
            "style": "emphasis",
            "bleed": true,
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "weight": "Bolder",
                            "text": "**DATE**",
                            "fontType": "Monospace",
                            "size": "Large",
                            "isSubtle": true
                        }
                    ],
                    "width": 10
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "**STATUS**",
                            "weight": "Bolder",
                            "fontType": "Monospace",
                            "size": "Large",
                            "isSubtle": true
                        }
                    ],
                    "width": 13
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "weight": "Bolder",
                            "text": "**CONTENT**",
                            "fontType": "Monospace",
                            "size": "Large",
                            "isSubtle": true
                        }
                    ],
                    "width": 50
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "weight": "Bolder",
                            "text": "**OWNER**",
                            "fontType": "Monospace",
                            "size": "Large",
                            "isSubtle": true
                        }
                    ],
                    "width": 25
                }
            ],
            "spacing": "ExtraLarge"
        },
        {
            "type": "ColumnSet",
            "$data": "${tasks}",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${formatDateTime(dueDate, 'YYYY-MM-dd')}",
                            "wrap": true
                        }
                    ],
                    "width": 10,
                    "verticalContentAlignment": "Center"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${CurrentStatus}",
                            "wrap": true
                        }
                    ],
                    "width": 13,
                    "verticalContentAlignment": "Center"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${taskContent}",
                            "wrap": true,
                            "color": "Accent",
                            "maxLines": 10,
                            "weight": "Bolder"
                        }
                    ],
                    "verticalContentAlignment": "Center",
                    "width": 50
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Container",
                            "items": [
                                {
                                    "type": "ColumnSet",
                                    "columns": [
                                        {
                                            "type": "Column",
                                            "items": [
                                                {
                                                    "type": "Image",
                                                    "style": "Person",
                                                    "url": "${creator.profileImage}",
                                                    "width": "45px"
                                                }
                                            ],
                                            "width": "auto"
                                        },
                                        {
                                            "type": "Column",
                                            "items": [
                                                {
                                                    "type": "TextBlock",
                                                    "text": "${creator.userName}",
                                                    "wrap": true
                                                }
                                            ],
                                            "width": "stretch"
                                        }
                                    ]
                                }
                            ]
                        }
                    ],
                    "width": 25,
                    "verticalContentAlignment": "Center"
                }
            ]
        },
        {
            "type": "TextBlock",
            "text": "Total Number: ${taskNum}",
            "wrap": true,
            "fontType": "Monospace",
            "weight": "Bolder",
            "isSubtle": true,
            "separator": true,
            "spacing": "ExtraLarge",
            "horizontalAlignment": "Right"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": 3,
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Page **${pageNow}** of ${pageNum}",
                            "wrap": true,
                            "horizontalAlignment": "Center"
                        }
                    ],
                    "verticalContentAlignment": "Center"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Input.Text",
                            "value": "${pageNow}",
                            "id": "jumpedpage",
                            "isRequired": true,
                            "regex": "^[1-9][0-9]*$",
                            "errorMessage": "This requires a valid number !",
                            "inlineAction": {
                                "type": "Action.Submit",
                                "title": "Go",
                                "data": {
                                    "action": "go"
                                }
                            }
                        }
                    ],
                    "width": 2,
                    "verticalContentAlignment": "Center"
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.4"
}