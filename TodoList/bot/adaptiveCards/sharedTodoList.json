{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "TextBlock",
            "size": "ExtraLarge",
            "text": "**TO-DO LIST**",
            "wrap": true,
            "style": "heading"
        },
        {
            "type": "TextBlock",
            "text": "***Shared with me***",
            "wrap": true,
            "color": "Attention",
            "size": "Large",
            "spacing": "None"
        },
        {
            "type": "ColumnSet",
            "style": "emphasis",
            "bleed": true,
            "spacing": "ExtraLarge",
            "columns": [
                {
                    "type": "Column",
                    "width": "50px",
                    "items": [
                        {
                            "type": "TextBlock",
                            "weight": "Bolder",
                            "text": "**DATE**",
                            "fontType": "Monospace",
                            "size": "Large",
                            "isSubtle": true
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "70px",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "**STATE**",
                            "weight": "Bolder",
                            "fontType": "Monospace",
                            "size": "Large",
                            "isSubtle": true
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "weight": "Bolder",
                            "text": "**CONTENT**",
                            "fontType": "Monospace",
                            "size": "Large",
                            "isSubtle": true
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "120px",
                    "items": [
                        {
                            "type": "TextBlock",
                            "weight": "Bolder",
                            "text": "**OWNER**",
                            "fontType": "Monospace",
                            "size": "Large",
                            "isSubtle": true
                        }
                    ]
                }
            ]
        },
        {
            "type": "ColumnSet",
            "$data": "${tasks}",
            "columns": [
                {
                    "type": "Column",
                    "width": "50px",
                    "verticalContentAlignment": "Center",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${formatDateTime(dueDate, 'MM-dd')}",
                            "wrap": true
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "70px",
                    "verticalContentAlignment": "Center",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${currentStatus}",
                            "color": "${if(currentStatus == 'New', 'dark', if(currentStatus == 'Active', 'warning', 'good'))}",
                            "wrap": true,
                            "weight": "Bolder",
                            "isSubtle": true
                        }
                    ]
                },
                {
                    "type": "Column",
                    "verticalContentAlignment": "Center",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${taskContent}",
                            "wrap": true,
                            "maxLines": 10
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "120px",
                    "verticalContentAlignment": "Center",
                    "items": [
                        {
                            "type": "Container",
                            "items": [
                                {
                                    "type": "ColumnSet",
                                    "columns": [
                                        {
                                            "type": "Column",
                                            "items": [
                                                {
                                                    "type": "Image",
                                                    "style": "Person",
                                                    "url": "${creator.profileImage}",
                                                    "width": "40px"
                                                }
                                            ],
                                            "width": "auto"
                                        },
                                        {
                                            "type": "Column",
                                            "items": [
                                                {
                                                    "type": "TextBlock",
                                                    "text": "${creator.userName}",
                                                    "wrap": true
                                                }
                                            ],
                                            "width": "stretch",
                                            "spacing": "Small"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "type": "TextBlock",
            "text": "Total Number: ${taskNum}",
            "wrap": true,
            "fontType": "Monospace",
            "weight": "Bolder",
            "isSubtle": true,
            "separator": true,
            "spacing": "ExtraLarge",
            "horizontalAlignment": "Right"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": 3,
                    "verticalContentAlignment": "Center",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Page **${pageNow}** of ${pageNum}",
                            "wrap": true,
                            "horizontalAlignment": "Center"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": 2,
                    "verticalContentAlignment": "Center",
                    "items": [
                        {
                            "type": "Input.Text",
                            "value": "${pageNow}",
                            "id": "jumpedpage",
                            "isRequired": true,
                            "regex": "^[1-9][0-9]*$",
                            "errorMessage": "This requires a valid number !",
                            "inlineAction": {
                                "type": "Action.Submit",
                                "title": "Go",
                                "data": {
                                    "action": "go"
                                }
                            }
                        }
                    ]
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5"
}