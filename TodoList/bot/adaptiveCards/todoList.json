{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "size": "ExtraLarge",
                                    "text": "**TO-DO LIST**",
                                    "wrap": true,
                                    "style": "heading"
                                }
                            ],
                            "width": "stretch"
                        }
                    ]
                }
            ],
            "spacing": "ExtraLarge"
        },
        {
            "type": "Container",
            "spacing": "Large",
            "style": "emphasis",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "weight": "Bolder",
                                    "text": "**DATE**",
                                    "horizontalAlignment": "Left",
                                    "fontType": "Monospace",
                                    "size": "Large",
                                    "isSubtle": true
                                }
                            ],
                            "width": 8
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "**STATUS**",
                                    "horizontalAlignment": "Left",
                                    "weight": "Bolder",
                                    "fontType": "Monospace",
                                    "size": "Large",
                                    "isSubtle": true
                                }
                            ],
                            "spacing": "Small",
                            "width": 15
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "weight": "Bolder",
                                    "text": "**CONTENT**",
                                    "horizontalAlignment": "Left",
                                    "fontType": "Monospace",
                                    "size": "Large",
                                    "isSubtle": true
                                }
                            ],
                            "width": 70,
                            "spacing": "Small"
                        }
                    ]
                }
            ],
            "bleed": true
        },
        {
            "$data": "${tasks}",
            "type": "Container",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "${formatDateTime(dueDate, 'MM-dd')}",
                                    "wrap": true
                                }
                            ],
                            "selectAction": {
                                "type": "Action.Submit",
                                "tooltip": "click to show more about this to-do item",
                                "data": {
                                    "action": "show",
                                    "id": "${$index}",
                                    "taskId": "${taskId}"
                                }
                            },
                            "width": 7,
                            "verticalContentAlignment": "Center"
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "${CurrentStatus}",
                                    "wrap": true
                                }
                            ],
                            "selectAction": {
                                "type": "Action.Submit",
                                "tooltip": "click to show more about this to-do item",
                                "data": {
                                    "action": "show",
                                    "id": "${$index}",
                                    "taskId": "${taskId}"
                                }
                            },
                            "width": 13,
                            "verticalContentAlignment": "Center"
                        },
                        {
                            "type": "Column",
                            "spacing": "Large",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "${taskContent}",
                                    "wrap": true,
                                    "horizontalAlignment": "Left",
                                    "color": "Accent",
                                    "maxLines": 10,
                                    "weight": "Bolder"
                                }
                            ],
                            "selectAction": {
                                "type": "Action.Submit",
                                "tooltip": "click to show more about this to-do item",
                                "data": {
                                    "action": "show",
                                    "id": "${$index}",
                                    "taskId": "${taskId}"
                                }
                            },
                            "width": 60,
                            "verticalContentAlignment": "Center"
                        },
                        {
                            "type": "Column",
                            "spacing": "None",
                            "verticalContentAlignment": "Center",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "https://todolist.blob.core.windows.net/adaptive-cards/bin.png?sp=r&st=2022-08-18T10:29:48Z&se=2022-11-30T18:29:48Z&spr=https&sv=2021-06-08&sr=c&sig=%2BYqszohKyR55ozKNZuKWYcn8Movulz%2Fx6L4mMvWffKs%3D",
                                    "width": "20px",
                                    "horizontalAlignment": "Center"
                                }
                            ],
                            "selectAction": {
                                "type": "Action.Submit",
                                "data": {
                                    "action": "delete",
                                    "id": "${$index}",
                                    "taskId": "${taskId}"
                                }
                            },
                            "width": 3
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "spacing": "Large",
            "items": [
                {
                    "type": "ActionSet",
                    "actions": [
                        {
                            "type": "Action.ShowCard",
                            "title": "New Item",
                            "tooltip": "create a to-do item",
                            "card": {
                                "type": "AdaptiveCard",
                                "actions": [
                                    {
                                        "type": "Action.Submit",
                                        "title": "Confirm",
                                        "data": {
                                            "action": "add"
                                        }
                                    }
                                ],
                                "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
                                "body": [
                                    {
                                        "type": "Input.Date",
                                        "id": "addDate",
                                        "label": "Date",
                                        "value": "${formatDateTime(time, 'YYYY-MM-dd')}",
                                        "isRequired": true
                                    },
                                    {
                                        "type": "Input.Text",
                                        "placeholder": "What will you do?",
                                        "id": "addContent",
                                        "label": "Content",
                                        "isMultiline": true,
                                        "isRequired": true
                                    }
                                ]
                            },
                            "style": "positive"
                        }
                    ]
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.4"
}