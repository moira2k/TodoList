{
    "type": "AdaptiveCard",
    "version": "1.4",
    "actions": [
        {
            "type": "Action.Submit",
            "title": "Send",
            "data": {
                "action": "add"
            }
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "body": [
        {
            "type": "TextBlock",
            "text": "CREATE A TO-DO ITEM",
            "wrap": true,
            "horizontalAlignment": "Center",
            "size": "ExtraLarge",
            "style": "heading",
            "color": "Accent",
            "weight": "Bolder"
        },
        {
            "type": "Input.Date",
            "id": "addDate",
            "label": "Date",
            "value": "${formatDateTime(time, 'YYYY-MM-dd')}",
            "isRequired": true
        },
        {
            "type": "Input.Text",
            "value": "${content}",
            "placeholder": "Please input the content of your new task.",
            "id": "addContent",
            "maxLength": 256,
            "label": "Content",
            "isMultiline": true,
            "isRequired": true
        }
    ]
}