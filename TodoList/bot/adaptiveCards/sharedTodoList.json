{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "size": "ExtraLarge",
                                    "text": "**TO-DO LIST**",
                                    "wrap": true,
                                    "style": "heading"
                                },
                                {
                                    "type": "TextBlock",
                                    "size": "Large",
                                    "text": "**Shared with me**",
                                    "wrap": true,
                                    "color": "Attention"
                                }
                            ],
                            "width": "stretch"
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "spacing": "Large",
            "style": "emphasis",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "weight": "Bolder",
                                    "text": "**DATE**",
                                    "horizontalAlignment": "Left",
                                    "fontType": "Monospace",
                                    "size": "Large",
                                    "isSubtle": true
                                }
                            ],
                            "width": 8
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "**STATUS**",
                                    "horizontalAlignment": "Left",
                                    "weight": "Bolder",
                                    "fontType": "Monospace",
                                    "size": "Large",
                                    "isSubtle": true
                                }
                            ],
                            "spacing": "Small",
                            "width": 14
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "weight": "Bolder",
                                    "text": "**CONTENT**",
                                    "horizontalAlignment": "Left",
                                    "fontType": "Monospace",
                                    "size": "Large",
                                    "isSubtle": true
                                }
                            ],
                            "width": 56,
                            "spacing": "Small"
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "weight": "Bolder",
                                    "text": "**OWNER**",
                                    "horizontalAlignment": "Left",
                                    "fontType": "Monospace",
                                    "size": "Large",
                                    "isSubtle": true
                                }
                            ],
                            "width": 18
                        }
                    ]
                }
            ],
            "bleed": true
        },
        {
            "$data": "${tasks}",
            "type": "Container",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "${formatDateTime(dueDate, 'MM-dd')}",
                                    "wrap": true
                                }
                            ],
                            "width": 8,
                            "verticalContentAlignment": "Center"
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "${CurrentStatus}",
                                    "wrap": true,
                                    "horizontalAlignment": "Left"
                                }
                            ],
                            "width": 13,
                            "verticalContentAlignment": "Center"
                        },
                        {
                            "type": "Column",
                            "spacing": "Large",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "${taskContent}",
                                    "wrap": true,
                                    "horizontalAlignment": "Left",
                                    "color": "Accent",
                                    "maxLines": 10,
                                    "weight": "Bolder"
                                }
                            ],
                            "width": 60,
                            "verticalContentAlignment": "Center"
                        },
                        {
                            "type": "Column",
                            "width": "auto",
                            "items": [
                                {
                                    "type": "Image",
                                    "style": "Person",
                                    "url": "${creator.profileImage}",
                                    "width": "40px"
                                }
                            ],
                            "spacing": "Small",
                            "verticalContentAlignment": "Center"
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "${creator.userName}",
                                    "wrap": true
                                }
                            ],
                            "spacing": "Small",
                            "verticalContentAlignment": "Center",
                            "width": 10
                        },
                        {
                            "type": "Column",
                            "spacing": "None",
                            "verticalContentAlignment": "Center",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "https://todolist.blob.core.windows.net/adaptive-cards/ellipsis.png?sp=r&st=2022-08-18T10:29:48Z&se=2022-11-30T18:29:48Z&spr=https&sv=2021-06-08&sr=c&sig=%2BYqszohKyR55ozKNZuKWYcn8Movulz%2Fx6L4mMvWffKs%3D",
                                    "width": "15px",
                                    "horizontalAlignment": "Center"
                                }
                            ],
                            "selectAction": {
                                "type": "Action.Submit",
                                "data": {
                                    "action": "show",
                                    "id": "${$index}",
                                    "taskId": "${taskId}"
                                }
                            },
                            "width": 3
                        }
                    ]
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.4"
}