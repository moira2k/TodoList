{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "Container",
                    "style": "emphasis",
                    "items": [
                        {
                            "type": "TextBlock",
                            "color": "Accent",
                            "weight": "Bolder",
                            "text": "-- *Keep early hours and enjoy yourself.*",
                            "style": "heading",
                            "fontType": "Monospace",
                            "isSubtle": true,
                            "horizontalAlignment": "Right",
                            "size": "Medium"
                        }
                    ],
                    "bleed": true
                },
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": 10,
                            "items": [
                                {
                                    "type": "RichTextBlock",
                                    "inlines": [
                                        {
                                            "type": "TextRun",
                                            "text": "Hi, ",
                                            "wrap": true,
                                            "fontType": "Monospace",
                                            "size": "ExtraLarge",
                                            "weight": "Bolder"
                                        },
                                        {
                                            "type": "TextRun",
                                            "text": "${enquirer.userName} ",
                                            "wrap": true,
                                            "fontType": "Monospace",
                                            "size": "ExtraLarge",
                                            "weight": "Bolder",
                                            "color": "Accent"
                                        },
                                        {
                                            "type": "TextRun",
                                            "text": "~",
                                            "wrap": true,
                                            "fontType": "Monospace",
                                            "size": "ExtraLarge",
                                            "weight": "Bolder"
                                        }
                                    ]
                                },
                                {
                                    "type": "RichTextBlock",
                                    "inlines": [
                                        {
                                            "type": "TextRun",
                                            "text": "Today is ",
                                            "size": "Large",
                                            "fontType": "Monospace"
                                        },
                                        {
                                            "type": "TextRun",
                                            "text": "{{DATE(${string(time)}, LONG)}}.",
                                            "wrap": true,
                                            "size": "ExtraLarge",
                                            "weight": "Bolder",
                                            "fontType": "Monospace"
                                        }
                                    ],
                                    "horizontalAlignment": "Center"
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "spacing": "None",
                            "verticalContentAlignment": "Center",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "https://todolist.blob.core.windows.net/adaptive-cards/exit.png?sp=r&st=2022-08-18T10:29:48Z&se=2022-11-30T18:29:48Z&spr=https&sv=2021-06-08&sr=c&sig=%2BYqszohKyR55ozKNZuKWYcn8Movulz%2Fx6L4mMvWffKs%3D",
                                    "width": "35px"
                                }
                            ],
                            "selectAction": {
                                "type": "Action.Submit",
                                "tooltip": "Sign Out",
                                "data": {
                                    "action": "signout"
                                }
                            },
                            "width": 1
                        }
                    ],
                    "spacing": "None"
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.4"
}