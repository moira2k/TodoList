{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "size": "ExtraLarge",
                                    "text": "**TO-DO LIST**",
                                    "wrap": true,
                                    "style": "heading"
                                }
                            ],
                            "width": "stretch"
                        }
                    ]
                }
            ],
            "spacing": "ExtraLarge"
        },
        {
            "type": "Container",
            "spacing": "Large",
            "style": "emphasis",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "weight": "Bolder",
                                    "text": "**DATE**",
                                    "horizontalAlignment": "Left",
                                    "fontType": "Monospace",
                                    "size": "Large",
                                    "isSubtle": true
                                }
                            ],
                            "width": 15
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "**STATUS**",
                                    "horizontalAlignment": "Left",
                                    "weight": "Bolder",
                                    "fontType": "Monospace",
                                    "size": "Large",
                                    "isSubtle": true
                                }
                            ],
                            "width": 16
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "weight": "Bolder",
                                    "text": "**CONTENT**",
                                    "horizontalAlignment": "Left",
                                    "fontType": "Monospace",
                                    "size": "Large",
                                    "isSubtle": true
                                }
                            ],
                            "width": 65
                        }
                    ]
                }
            ],
            "bleed": true
        },
        {
            "$data": "${tasks}",
            "type": "Container",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "${formatDateTime(dueDate, 'YYYY-MM-dd')}",
                                    "wrap": true
                                }
                            ],
                            "selectAction": {
                                "type": "Action.Submit",
                                "tooltip": "See details",
                                "data": {
                                    "action": "show",
                                    "id": "${$index}",
                                    "taskId": "${taskId}",
                                    "pageNow": "${$root.pageNow}"
                                }
                            },
                            "width": 15,
                            "verticalContentAlignment": "Center"
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "${CurrentStatus}",
                                    "wrap": true
                                }
                            ],
                            "selectAction": {
                                "type": "Action.Submit",
                                "tooltip": "See details",
                                "data": {
                                    "action": "show",
                                    "id": "${$index}",
                                    "taskId": "${taskId}",
                                    "pageNow": "${$root.pageNow}"
                                }
                            },
                            "width": 16,
                            "verticalContentAlignment": "Center"
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "${taskContent}",
                                    "wrap": true,
                                    "horizontalAlignment": "Left",
                                    "color": "Accent",
                                    "maxLines": 10,
                                    "weight": "Bolder"
                                }
                            ],
                            "selectAction": {
                                "type": "Action.Submit",
                                "tooltip": "See details",
                                "data": {
                                    "action": "show",
                                    "id": "${$index}",
                                    "taskId": "${taskId}",
                                    "pageNow": "${$root.pageNow}"
                                }
                            },
                            "width": 61,
                            "verticalContentAlignment": "Center"
                        },
                        {
                            "type": "Column",
                            "spacing": "None",
                            "verticalContentAlignment": "Center",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "https://todolist.blob.core.windows.net/adaptive-cards/bin.png?sp=r&st=2022-08-18T10:29:48Z&se=2022-11-30T18:29:48Z&spr=https&sv=2021-06-08&sr=c&sig=%2BYqszohKyR55ozKNZuKWYcn8Movulz%2Fx6L4mMvWffKs%3D",
                                    "width": "20px",
                                    "horizontalAlignment": "Center"
                                }
                            ],
                            "selectAction": {
                                "type": "Action.Submit",
                                "tooltip": "Delete",
                                "data": {
                                    "action": "delete",
                                    "id": "${$index}",
                                    "taskId": "${taskId}",
                                    "pageNow": "${$root.pageNow}"
                                }
                            },
                            "width": 3
                        }
                    ]
                }
            ]
        },
        {
            "type": "TextBlock",
            "text": "Total Number: ${taskNum}",
            "wrap": true,
            "fontType": "Monospace",
            "weight": "Bolder",
            "isSubtle": true,
            "separator": true,
            "spacing": "ExtraLarge",
            "horizontalAlignment": "Right"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": 3,
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Page **${pageNow}** of ${pageNum}",
                            "wrap": true,
                            "horizontalAlignment": "Center"
                        }
                    ],
                    "verticalContentAlignment": "Center"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Input.Text",
                            "value": "${pageNow}",
                            "id": "jumpedpage",
                            "isRequired": true,
                            "regex": "^[1-9][0-9]*$",
                            "errorMessage": "This requires a valid number !",
                            "inlineAction": {
                                "type": "Action.Submit",
                                "title": "Go",
                                "data": {
                                    "action": "go"
                                }
                            }
                        }
                    ],
                    "width": 2,
                    "verticalContentAlignment": "Center"
                }
            ]
        },
        {
            "type": "Container",
            "spacing": "Large",
            "items": [
                {
                    "type": "ActionSet",
                    "actions": [
                        {
                            "type": "Action.ShowCard",
                            "title": "New Item",
                            "tooltip": "Create a to-do item",
                            "card": {
                                "type": "AdaptiveCard",
                                "actions": [
                                    {
                                        "type": "Action.Submit",
                                        "title": "Confirm",
                                        "data": {
                                            "action": "add",
                                            "pageNow": "${pageNow}"
                                        }
                                    }
                                ],
                                "body": [
                                    {
                                        "type": "Input.Date",
                                        "id": "addDate",
                                        "label": "Date",
                                        "value": "${formatDateTime(time, 'YYYY-MM-dd')}",
                                        "isRequired": true
                                    },
                                    {
                                        "type": "Input.Text",
                                        "placeholder": "What will you do?",
                                        "id": "addContent",
                                        "label": "Content",
                                        "maxLength": 256,
                                        "isMultiline": true,
                                        "isRequired": true
                                    }
                                ]
                            },
                            "style": "positive"
                        }
                    ]
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.4"
}