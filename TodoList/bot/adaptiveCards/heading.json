{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "Container",
                    "style": "emphasis",
                    "items": [
                        {
                            "type": "ColumnSet",
                            "columns": [
                                {
                                    "type": "Column",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "color": "Accent",
                                            "weight": "Bolder",
                                            "text": "-- *Keep early hours and enjoy yourself.*",
                                            "style": "heading",
                                            "fontType": "Monospace",
                                            "isSubtle": true,
                                            "size": "Medium",
                                            "horizontalAlignment": "Right"
                                        }
                                    ],
                                    "width": "stretch"
                                }
                            ]
                        }
                    ],
                    "bleed": true
                },
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": 50,
                            "spacing": "None",
                            "verticalContentAlignment": "Center",
                            "items": [
                                {
                                    "type": "RichTextBlock",
                                    "inlines": [
                                        {
                                            "type": "TextRun",
                                            "text": "Hi, ",
                                            "wrap": true,
                                            "fontType": "Monospace",
                                            "size": "ExtraLarge",
                                            "weight": "Bolder"
                                        },
                                        {
                                            "type": "TextRun",
                                            "text": "${enquirer.userName} ",
                                            "wrap": true,
                                            "fontType": "Monospace",
                                            "size": "ExtraLarge",
                                            "weight": "Bolder",
                                            "color": "Accent"
                                        },
                                        {
                                            "type": "TextRun",
                                            "text": "~",
                                            "wrap": true,
                                            "fontType": "Monospace",
                                            "size": "ExtraLarge",
                                            "weight": "Bolder"
                                        }
                                    ]
                                },
                                {
                                    "type": "RichTextBlock",
                                    "inlines": [
                                        {
                                            "type": "TextRun",
                                            "text": "Today is ",
                                            "size": "Large",
                                            "fontType": "Monospace"
                                        },
                                        {
                                            "type": "TextRun",
                                            "text": "{{DATE(${string(time)}, LONG)}}.",
                                            "wrap": true,
                                            "size": "ExtraLarge",
                                            "weight": "Bolder",
                                            "fontType": "Monospace"
                                        }
                                    ],
                                    "horizontalAlignment": "Center"
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "spacing": "None",
                            "verticalContentAlignment": "Center",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "data:image/png;base64,",
                                    "width": "25px",
                                    "horizontalAlignment": "Center"
                                }
                            ],
                            "selectAction": {
                                "type": "Action.Submit",
                                "data": {
                                    "action": "signout"
                                }
                            },
                            "width": 5
                        }
                    ],
                    "spacing": "None",
                    "horizontalAlignment": "Left"
                }
            ],
            "spacing": "None"
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.4"
}